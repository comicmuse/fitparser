# Strava API credentials
# Get these by creating an app at https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_client_id_here
STRAVA_CLIENT_SECRET=your_client_secret_here

# Webhook verification token (use a random string, e.g., generated with: openssl rand -hex 16)
STRAVA_VERIFY_TOKEN=your_random_verify_token_here

# OAuth tokens (optional - can be obtained through OAuth flow)
# Leave these empty initially, they will be saved after OAuth authorization
# Run: python strava_oauth.py to complete the OAuth flow
STRAVA_ACCESS_TOKEN=
STRAVA_REFRESH_TOKEN=

# OAuth flow configuration (optional - for strava_oauth.py)
# Redirect URI must match your Strava app settings (Authorization Callback Domain should include "localhost")
OAUTH_REDIRECT_URI=http://localhost:8000
OAUTH_PORT=8000

# Download configuration
# Base directory where FIT files will be saved in yyyy/mm/yyyymmdd_activity_name.fit structure
DOWNLOAD_BASE_DIR=./downloads

# State file to track downloaded activities (prevents duplicate downloads)
STATE_FILE=./downloaded_activities.json

# Webhook server port
WEBHOOK_PORT=5000

# Selenium browser automation (for FIT file downloads)
# Set to 'true' to enable Selenium-based downloads (requires: pip install selenium webdriver-manager)
USE_SELENIUM=false

# Optional: Strava login credentials for Selenium
# If not provided, Selenium will attempt to use OAuth tokens
# Email/password login is more reliable for automated downloads
STRAVA_EMAIL=
STRAVA_PASSWORD=

